{
  "version": 2,
  "name": "agentguard-ui",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://watcher-api.onrender.com/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://watcher-api.onrender.com",
    "NEXT_PUBLIC_APP_NAME": "AgentGuard",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://watcher-api.onrender.com/:path*"
    }
  ]
}